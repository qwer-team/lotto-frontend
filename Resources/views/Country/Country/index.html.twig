{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Country list</h1>

    <table class="records_list table table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Imagename</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a href="{{ path('type', { 'country': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{{ entity.imageName }}</td>
                <td>
                
                    <a class="btn btn-primary" href="{{ path('country_show', { 'id': entity.id }) }}" title="{% trans%}show{%endtrans%}"><i class="icon-info-sign icon-white"> </i></a>
                    
                    <a class="btn btn-warning" href="{{ path('country_edit', { 'id': entity.id }) }}" title="{% trans%}edit{%endtrans%}"><i class="icon-edit icon-white"> </i></a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 {{pagination|raw}}
        
    <a class="btn btn-success" href="{{ path('country_new') }}" title="{% trans%}Create a new entry{%endtrans%}">
        <i class="icon-plus-sign icon-white"> </i>&nbsp;{{"Create a new entry"|trans}}       
            </a>
        
    {% endblock %}
