{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Country edit</h1>

    <form action="{{ path('country_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-primary" data-loading-text="Loading...">{% trans%}Edit{%endtrans%}</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('country') }}">
            {% trans%}Back to the list{%endtrans%}
        </a>
    </li>
    <li>
        <form action="{{ path('country_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
           <button type="submit" class="btn btn-primary" data-loading-text="Loading...">{% trans%}Delete{%endtrans%}</button>
        </form>
    </li>
</ul>
{% endblock %}
