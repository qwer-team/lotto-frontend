<div class="clear"></div>
{% block lottery %}
<script>
    var formToken = '{{ form._token.vars['value'] }}';
    var startLottoId = '{%if not index%}{{ lotto.id }}{%endif%}';
    var lottoTypeId = '{{ lotto.id }}';
    </script>
    <h2>{{ lotto.translate(locale).title }}</h2>
    <div class="ir-lotery" id="withbonus">
        <div class="block" name="add">
            <div class="block-header">
                <div class="title">
                    <span class="radio-bt"></span>
                                    {{ "lotto_page.with bonus ball"|trans }}
                </div>
            </div>
            <div class="block-content">
                <div class="block-overlay"></div>
                <ul>
                    <li>{% trans with {'%number1%': 1, '%number2%': 1} %}lotto_page.choose{% endtrans %} {{lotto.b1b|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                    <li>{% trans with {'%number1%': 2, '%number2%': 2} %}lotto_page.choose{% endtrans %} {{lotto.b2b|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                    <li>{% trans with {'%number1%': 3, '%number2%': 3} %}lotto_page.choose{% endtrans %} {{lotto.b3b|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                    <li>{% trans with {'%number1%': 4, '%number2%': 4} %}lotto_page.choose{% endtrans %} {{lotto.b4b|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                    <li>{% trans with {'%number1%': 5, '%number2%': 5} %}lotto_page.choose{% endtrans %} {{lotto.b5b|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                </ul>
            </div>
            <div class="block-footer"></div>
        </div>
        <div class="block" name="delete">
            <div class="block-header">
                <div class="title">
                    <span class="radio-bt without_bonus"></span>
                                   {{ "lotto_page.without bonus ball"|trans }}
                </div>
            </div>
            <div class="block-content">
                <div class="block-overlay"></div>
                <ul>
                    <li>{% trans with {'%number1%': 1, '%number2%': 1} %}lotto_page.choose{% endtrans %} {{lotto.b1|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                    <li>{% trans with {'%number1%': 2, '%number2%': 2} %}lotto_page.choose{% endtrans %} {{lotto.b2|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                    <li>{% trans with {'%number1%': 3, '%number2%': 3} %}lotto_page.choose{% endtrans %} {{lotto.b3|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                    <li>{% trans with {'%number1%': 4, '%number2%': 4} %}lotto_page.choose{% endtrans %} {{lotto.b4|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                    <li>{% trans with {'%number1%': 5, '%number2%': 5} %}lotto_page.choose{% endtrans %} {{lotto.b5|number_format(2, '.', ',')}} x {{ "lotto_page.stake"|trans }}</li>
                </ul>
            </div>
            <div class="block-footer"></div>
        </div>
    </div>

    <div class="rates"><!-- rates -->
        <div id="lucky-dips" class="blue-block">
            <div class="title">
                <div>{{ "lotto_page.lucky dips"|trans }}</div>
            </div>
            <div class="block-content">
                <div class="balls-g1 balls-3" param="3"></div>
                <div class="balls-g1 balls-4" param="4"></div>
                <div class="balls-g1 balls-5" param="5"></div>
                <a href="#" class="green-bt" id="clear-all">
                                    {{ "lotto_page.clear all"|trans }}
                    </a>
                    <div class="clear"></div>
                </div>
            </div>
            <div id="select-you-balls" class="blue-block"><!-- select-you-balls -->
                <div class="title">
                    <div>{{ "lotto_page.select your balls"|trans }}</div>
                </div>
                <div class="block-content">
                    <div class="balls-container" id="lottery_balls"><!-- balls-container -->
                                                                            {% for v in 1..45 %}
                            <a class="ball-item ball" id="ball-{{ v }}" ball = '{{ v }}'>{{ v }}</a>
                                                                            {% endfor %}
                        </div><!-- .balls-container -->
                        <div class="clear"></div>
                    </div>
                </div><!-- .select-you-balls -->
                <div class="clear"></div>
                <div id="showErrorLottery"></div>
                <div id="tabs">
                    <ul>
                        <li><a href="#tabs-straight">{{ "lotto_page.straight bets"|trans }}</a></li>
                        <li><a href="#tabs-multiples">{{ "lotto_page.multiples"|trans }}</a></li>
                    </ul>
                    <div id="tabs-straight">
                        <table class="straight-table lot-table" style="color: white;">
                            <thead>
                                <tr>
                                    <td>{{ "lotto_page.line"|trans }}</td>
                                    <td>{{ "lotto_page.selections"|trans }}</td>
                                    <td>{{ "lotto_page.stake"|trans }}</td>
                                    <td>{{ "lotto_page.posible win"|trans }}</td>
                                </tr>
                            </thead>
                            <tbody>
                            <div id="cfLottery" class="hidden">
                                <div id="lottery_bet_form">
                                    <input name="withBonus" type="hidden" value="1"/>
                                </div>
                                <input type="hidden" name="b1" value="{{ lotto.b1 }}">
                                <input type="hidden" name="b2" value="{{ lotto.b2 }}">
                                <input type="hidden" name="b3" value="{{ lotto.b3 }}">
                                <input type="hidden" name="b4" value="{{ lotto.b4 }}">
                                <input type="hidden" name="b5" value="{{ lotto.b5 }}">
                                <input type="hidden" name="b1b" value="{{ lotto.b1b }}">
                                <input type="hidden" name="b2b" value="{{ lotto.b2b }}">
                                <input type="hidden" name="b3b" value="{{ lotto.b3b }}">
                                <input type="hidden" name="b4b" value="{{ lotto.b4b }}">
                                <input type="hidden" name="b5b" value="{{ lotto.b5b }}">
                            </div>
                      {% for i in range(0, 7) %}
                            <tr>
                                <td>
                                    <span class="title4">
                                        <a class="basket_line"><input type="radio" name ='selectionLine' class="styled" value="{{i}}" /></a>
                                        <label class="radio-label">Line {{i+1}}</label>
                                        <em style="display: none;">
                                        </em>
                                    </span>
                                </td>
                                <td>
                                    <div class="circle ball-item-line" param="bets_{{i}}_0" id="bets_{{i}}_0" position="0"></div>
                                    <div class="circle ball-item-line" param="bets_{{i}}_1" id="bets_{{i}}_1" position="1"></div>
                                    <div class="circle ball-item-line" param="bets_{{i}}_2" id="bets_{{i}}_2" position="2"></div>
                                    <div class="circle ball-item-line" param="bets_{{i}}_3" id="bets_{{i}}_3" position="3"></div>
                                    <div class="circle ball-item-line" param="bets_{{i}}_4" id="bets_{{i}}_4" position="4"></div>
                                </td>
                                <td>
                                    <div class="form_data_lottery">
                                        <input type="hidden" name="bets[{{i}}][0]" id="bets_{{i}}_0" class="bets" value=""/>
                                        <input type="hidden" name="bets[{{i}}][1]" id="bets_{{i}}_1" class="bets" value=""/>
                                        <input type="hidden" name="bets[{{i}}][2]" id="bets_{{i}}_2" class="bets" value=""/>
                                        <input type="hidden" name="bets[{{i}}][3]" id="bets_{{i}}_3" class="bets" value=""/>
                                        <input type="hidden" name="bets[{{i}}][4]" id="bets_{{i}}_4" class="bets" value=""/>
                                        <input type="text" name="betsSums[{{i}}]" id="betsSums_{{i}}" theme="{{i}}"  class="stake_line gray" readonly="true"/>
                                    </div>
                                </td>
                                <td><div><input type="text" name="posible_win" readonly="true" class="gray"/></div></td>
                            </tr>
                        {% endfor %}

                            </tbody>
                        </table>
                    </div>
                    <div id="tabs-multiples">
                        <table class="multiples-select">
                            <thead>
                                <tr>
                                    <td class="choice">{{ "lotto_page.selections"|trans }}</td>
                                    <td>{{ "lotto_page.bet type"|trans }}</td>
                                    <td>{{ "lotto_page.stake"|trans }}</td>
                                    <td>{{ "lotto_page.bets"|trans }}</td>
                                    <td>{{ "lotto_page.total stake"|trans }}</td>
                                    <td>{{ "lotto_page.posible win"|trans }}</td>
                                </tr>
                            </thead>
                            <tbody>
                            {% for i in range(0, 7) %}
                                                {% set class %}
                                                    {% if i==7 %}
                                    class="multiplice_last"
                                                    {% else %}
                                                    {% endif %}
                                                {% endset %}
                                    <tr {{ class }}>
                                        <td>
                                                        {% for j in range(0, i) %}
                                                <div class="circle ball-item-line" param="bets_{{i}}_{{j}}" id="mult_bets_{{i}}_{{j}}" for="{{ j }}" position="{{ j }}"></div>
                                                        {% endfor %}
                                            </td>
                                            <td id="td_select_{{ i }}" url="{{ path('reload_select') }}">
                                                <select name="" id="">
                                                    <option value="0"></option>
                                                </select>
                                            </td>
                                            <td>
                                                <div class="form_data_lottery">
                                                          {% for j in range(0, i) %}
                                                        <input type="hidden" name="bets[{{i}}][{{j}}]" id="bets_{{ i }}_{{j}}" class="bets" value=""/>
                                                           {% endfor %} 
                                                        <input type="text" name="betsSums[{{i}}]" id="betsSums_mult_{{i}}" class="stake_line gray" readonly="true"/>
                                                    </div>
                                                </td>
                                                <td class="count_bets">

                                                </td>
                                                <td>
                                                    <div><input type="text" name="total_stake" readonly="true" class="gray total_stake"/></div>
                                                </td>
                                                <td class="bet_return">
                                                    <div><input type="text" name="posible_win" readonly="true" class="gray posible_win"/></div>
                                                </td>
                                            </tr>
                                {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div>
                            </div>
                            <div class="form-bottom">
                                <div class="select-fl">
                                    <label for="">{{ "lotto_page.for the next"|trans }}</label>
                                    <select name="" id="cntDrawLottery">
                                        <option value="1">1 {{ "lotto_page.draws"|trans }}</option>
                                        <option value="2">2 {{ "lotto_page.draws"|trans }}</option>
                                        <option value="3">3 {{ "lotto_page.draws"|trans }}</option>
                                        <option value="4">4 {{ "lotto_page.draws"|trans }}</option>
                                        <option value="5">5 {{ "lotto_page.draws"|trans }}</option>
                                    </select>
                                    <div class="clear"></div>
                                </div>
                                <div class="tx-fl">
                                    <label for="">{{ "lotto_page.total stake"|trans }}</label>
                                    <input type="text" name="" readonly id="totalStakeLottery" value="">
                                </div>
                                <div  id="lottoform" token="" class="form-subm">
                                    <input type="submit" value="{{ "lotto_page.make a bet"|trans }}">
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div><!-- .rates -->
			{% endblock %}